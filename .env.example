# Application Configuration
FLASK_APP=app.main:create_app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://fluxadm:password@localhost:5432/fluxadm_dev
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_MODEL_PRIMARY=gpt-4
AI_MODEL_FALLBACK=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.1

# File Upload Configuration
UPLOAD_FOLDER=data/uploads
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,rtf

# Redis Configuration (for caching and background jobs)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=24
PASSWORD_HASH_ROUNDS=12

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
PROMETHEUS_METRICS_PORT=9090

# External Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
EMAIL_SMTP_HOST=smtp.company.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=noreply@company.com
EMAIL_SMTP_PASSWORD=your-email-password

# LDAP/Active Directory (Optional)
LDAP_HOST=ldap://your-ldap-server.com
LDAP_PORT=389
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_USER=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-password

# ServiceNow Integration (Optional)
SERVICENOW_INSTANCE=https://your-instance.service-now.com
SERVICENOW_USERNAME=integration-user
SERVICENOW_PASSWORD=integration-password